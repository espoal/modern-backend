{
  "name": "modern-backend",
  "packageManager": "yarn@4.0.0-rc.36",
  "scripts": {
    "build": "node build.mjs",
    "build:docker": "",
    "watch": "node build.mjs --watch",
    "serve": "node build.mjs --watch --serve",
    "start": "yarn dist/ start",
    "format": "rome format service pkgs libs --write --use-server",
    "lint": "rome check service pkgs libs --use-server",
    "lint:fix": "rome check service pkgs libs --apply-suggested --use-server",
    "test": "tsc --noEmit && node --loader tsx --test"
  },
  "workspaces": [
    "dist",
    "infra",
    "libs/*",
    "pkgs/*",
    "service"
  ],
  "devDependencies": {
    "@libs/build": "workspace:^",
    "@types/node": "^18.11.18",
    "rome": "^11.0.0",
    "tsx": "^3.12.2",
    "typescript": "^4.9.4"
  }
}
